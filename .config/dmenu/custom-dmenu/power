#!/bin/bash

# command auto generated by custome-dmenu-generator.sh


get_selection () {
echo -e "poweroff\nreboot\nlock\nsuspend" | dmenu -p "choose power option"
}


selection=$(get_selection)
if [ "$selection" == "poweroff" ]; then
	systemctl poweroff
elif [ "$selection" == "reboot" ]; then
	systemctl reboot
elif [ "$selection" == "lock" ]; then
	light-locker-command -l
elif [ "$selection" == "suspend" ]; then
	systemctl suspend
fi
